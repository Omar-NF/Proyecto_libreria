<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <TextView
        android:id="@+id/textView8"
        style="@style/CustomTextStyle"
        android:layout_width="340dp"
        android:layout_height="76dp"
        android:text="@string/tituloLLenar"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/edtNomLibroBuscar"
        style="@style/CustomEditTextStyle"
        android:layout_width="202dp"
        android:layout_height="57dp"
        android:ems="10"
        android:hint="@string/nomLibro"
        android:inputType="text"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="113dp" />

    <Switch
        android:id="@+id/swVenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/venta"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="389dp" />

    <Switch
        android:id="@+id/swRenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/renta"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="209dp"
        tools:layout_editor_absoluteY="431dp" />

    <Button
        android:id="@+id/btnNuscar"
        style="@style/CustomButtonStyle"
        android:layout_width="144dp"
        android:layout_height="52dp"
        android:text="@string/bus"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="113dp" />

</androidx.constraintlayout.widget.ConstraintLayout>